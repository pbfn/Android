<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_card"
    android:padding="15dp"
    tools:context=".activity.MainActivity">


    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/button_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:drawableTop="@drawable/ic_maxima_pessoas"
        android:gravity="center"
        android:text="Clientes"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:drawableTop="@drawable/ic_maxima_pedido"
        android:gravity="center"
        android:text="Pedidos"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/button_cliente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_cliente"
         />

    <Button
        android:id="@+id/button_resumo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:drawableTop="@drawable/ic_maxima_resumo_vendas"
        android:gravity="center"
        android:text="Resumo"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_cliente" />

    <Button
        android:id="@+id/button_ferramenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:drawableTop="@drawable/ic_maxima_ferramentas"
        android:gravity="center"
        android:text="Clientes"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/button_resumo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_resumo" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_conexao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version" />

        <ImageView
            android:id="@+id/image_view_conectado"
            android:src="@drawable/ic_maxima_nuvem_conectado"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <ImageView
            android:src="@drawable/ic_maxima_nuvem_desconectado"
            android:id="@+id/image_view_desconectado"
            android:layout_width="40dp"
            android:layout_height="40dp"/>


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>